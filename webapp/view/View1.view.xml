<mvc:View controllerName="btp.project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:p="sap.m.plugins"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <Table id="idProductsTable"
            inset="false"
            items="{Products>/}">
            <headerToolbar>
                <OverflowToolbar>
                    <content>
                        <Title text="Products" level="H2"/>
                        <ToolbarSpacer />
                        <ComboBox id="idPopinLayout"
                            placeholder="Popin layout options"
                            change="onPopinLayoutChanged">
                            <items>
                                <core:Item  text="Block" key="Block"/>
                                <core:Item  text="Grid Large" key="GridLarge"/>
                                <core:Item  text="Grid Small" key="GridSmall"/>
                            </items>
                        </ComboBox>
                        <Label text="Sticky options:" />
                        <CheckBox text="ColumnHeaders" select="onSelect"/>
                        <CheckBox text="HeaderToolbar" select="onSelect"/>
                        <CheckBox text="InfoToolbar" select="onSelect"/>
                        <ToggleButton id="toggleInfoToolbar"
                            text="Hide/Show InfoToolbar"
                            press="onToggleInfoToolbar" />
                    </content>
                </OverflowToolbar>
            </headerToolbar>
            <infoToolbar>
                <OverflowToolbar>
                    <Label text="Wide range of available products"/>
                </OverflowToolbar>
            </infoToolbar>
            <columns>
                <Column width="12em">
                    <Text text="ProductID" />
                    <dependents>
                        <p:ColumnAIAction press="onAIActionPress"/>
                    </dependents>
                </Column>
                <Column minScreenWidth="Tablet" demandPopin="true">
                    <Text text="ProductName" />
                </Column>
                <Column minScreenWidth="Desktop" demandPopin="true" hAlign="End">
                    <Text text="SupplierID" />
                </Column>
                <Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                    <Text text="CategoryID" />
                </Column>
                <Column hAlign="End">
                    <Text text="QuantityPerUnit" />
                </Column>
                <Column hAlign="End">
                    <Text text="UnitPrice" />
                </Column>
                <Column hAlign="End">
                    <Text text="UnitsInStock" />
                </Column>
                <Column hAlign="End">
                    <Text text="UnitsOnOrder" />
                </Column>
                <Column hAlign="End">
                    <Text text="ReorderLevel" />
                </Column>
                <Column hAlign="End">
                    <Text text="Discontinued" />
                </Column>
            </columns>
            <items>
                <ColumnListItem vAlign="Middle">
                    <cells>
                        <Text text="{Products>ProductID}" />
                        <Text text="{Products>ProductName}" />
                        <Text text="{Products>SupplierID}" />
                        <Text text="{Products>CategoryID}" />
                        <Text text="{Products>QuantityPerUnit}" />
                        <Text text="{Products>UnitPrice}" />
                        <Text text="{Products>UnitsInStock}" />
                        <Text text="{Products>UnitsOnOrder}" />
                        <Text text="{Products>ReorderLevel}" />
                        <Text text="{Products>Discontinued}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>
